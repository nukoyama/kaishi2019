\newenvironment{preface}[4]{%
  \newcommand\whatpreface{#1}%
  \addcontentsline{toc}{chapter}{\whatpreface}%
  \cleardoublepage%
  \section*{\whatpreface}%
  \def\prefacesyozoku{#2}%
  \def\prefacename{#3}%
  \def\prefacedate{#4}%
}{%
  \begin{flushright}%
    \prefacedate\\
    \prefacesyozoku\hspace{0.5zw}\prefacename%
  \end{flushright}\par%
}

